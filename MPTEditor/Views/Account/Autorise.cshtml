@model MPTEditor.Models.Users
@{
    Layout = null;
    ViewBag.Title = "Авторизация";
}
<body>
    <link rel="stylesheet" href="~/css/me.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <div class="container">
        <div class="row" style="padding-block:300px;">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" asp-antiforgery="true" asp-controller="Account" asp-action="Autorise">
                    <span class="heading">АВТОРИЗАЦИЯ</span>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input type="email" asp-for="Email" class="form-control" id="inputEmail" placeholder="E-mail">
                        <i class="fa fa-user"></i>
                        <span asp-validation-for="Email" />

                    </div>
                    <div class="form-group help">
                        <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
                        <i class="fa fa-lock"></i>
                        <span asp-validation-for="Password" />

                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="form-group heading">
                        <button type="submit" class="btn btn-default btn-dark ">ВХОД</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
