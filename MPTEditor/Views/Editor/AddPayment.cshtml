@model MPTEditor.Models.PaymentRegister;
@{Layout = "_Layout";}
<div class="container">
    <form class="form-horizontal" asp-antiforgery="true" asp-controller="Editor" asp-action="AddPayment">
        <span class="heading">Добавление записи в реестр</span>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input type="number" asp-for="Year" class="form-control" id="inputEmail" placeholder="Год: 2021">
            <span asp-validation-for="Year" />

        </div>
        <div class="form-group">
            <input type="text" asp-for="Month" class="form-control" id="inputFirst" placeholder="Месяц: март">
            <span asp-validation-for="Month" />

        </div>
        <div class="form-group">
            <input type="number" asp-for="Contract_id" class="form-control" id="inputLast" placeholder="1-10000">
            <span asp-validation-for="Contract_id" />

        </div>

        <div class="form-group heading">
            <button type="submit" class="btn btn-default btn-dark ">Добавить</button>
        </div>
    </form>

</div>
